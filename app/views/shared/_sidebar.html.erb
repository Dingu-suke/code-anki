<div class="text-gray-100 text-xl">
  <div class="p-2.5 mt-1 flex items-center">
    <i class="bi bi-app-indicator px-2 py-1 rounded-md bg-blue-600"></i>
    <%= link_to root_path,  
    class: "font-bold text-gray-200 text-[15px] ml-3" do %>code-anki<% end %>
  </div>
  <% if logged_in? %>
    <%= button_to logout_path, method: :delete, data: { turbo: false }, class: "w-full p-1 flex mt-3 items-center rounded-md duration-300 cursor-pointer bg-slate-950 hover:bg-teal-600 border border-teal-600 text-slate-500" do %>
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 200 40">
        <!-- ボタンの背景 -->
        <rect x="0" y="0" width="200" height="40" rx="6" fill="#050505"/>
        
        <!-- ログアウトアイコン - ドアと矢印の組み合わせ -->
        <g transform="translate(20, 8)" fill="#ffffff">
          <!-- ドアのフレーム -->
          <path d="M12 4V20H6V4H12ZM11 2H7C5.9 2 5 2.9 5 4V20C5 21.1 5.9 22 7 22H11C12.1 22 13 21.1 13 20V4C13 2.9 12.1 2 11 2Z"/>
          <!-- 出て行く矢印 -->
          <path d="M16.17 11L13.59 8.41L15 7L20 12L15 17L13.59 15.59L16.17 13H7V11H16.17Z"/>
        </g>
        
        <!-- Logoutテキスト -->
        <text x="60" y="25" font-family="Arial, sans-serif" font-size="16" fill="#ffffff" font-weight="bold">Logout</text>
      </svg>
    <% end %>
  <% else %>
    <%= button_to "/auth/github", method: :post, data: { turbo: false }, class: "w-full p-1 flex mt-3 items-center rounded-md duration-300 cursor-pointer hover:bg-teal-600 border-2 border-teal-800 text-white" do %>
      <i class="bi bi-github"></i>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 220 45">
          <!-- ボタンの背景 -->
          <rect x="0" y="0" width="220" height="45" rx="6" fill="#24292E"/>          
          <!-- GitHubロゴ -->
          <path d="M20 10.03c-5.52 0-10 4.48-10 10 0 4.42 2.87 8.17 6.84 9.49.5.09.68-.21.68-.48 0-.24-.01-1.02-.01-1.86-2.78.6-3.37-1.17-3.37-1.17-.46-1.16-1.11-1.47-1.11-1.47-.91-.62.07-.61.07-.61 1 .07 1.53 1.03 1.53 1.03.89 1.52 2.34 1.08 2.91.83.09-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.94 0-1.09.39-1.98 1.03-2.68-.1-.25-.45-1.27.1-2.64 0 0 .84-.27 2.75 1.02.8-.22 1.65-.33 2.5-.34.85.01 1.7.12 2.5.34 1.91-1.29 2.75-1.02 2.75-1.02.55 1.37.2 2.39.1 2.64.64.7 1.03 1.59 1.03 2.68 0 3.84-2.34 4.68-4.57 4.93.36.31.68.92.68 1.85 0 1.34-.01 2.42-.01 2.75 0 .27.18.58.69.48A10.01 10.01 0 0 0 30 20.03c0-5.52-4.48-10-10-10z" fill="#ffffff"/>          
          <!-- テキスト -->
          <text x="50" y="27" font-family="Arial, sans-serif" font-size="17" fill="#ffffff">Sign in with GitHub</text>
        </svg>
    <% end %>
  <% end %>
  
  <div class="border-2 border-b my-8 border-gray-600 h-[1px]"></div>
</div>

<% if logged_in? %>
  <%= link_to decks_path, class: "p-2.5 mt-3 flex items-center rounded-md px-4 duration-300 cursor-pointer hover:bg-sky-900
                                #{current_page?(decks_path) ? 'bg-sky-950 border border-sky-700 text-white' : 'text-gray-400 hover:text-gray-200'}" do %>
    <i class="bi bi-house-door-fill"></i>
    <span class="text-[15p4x] ml-4 font-bold">みんなの公開デッキ</span>
  <% end %>

  <%= link_to mypage_path, class: "p-2.5 mt-3 flex items-center rounded-md px-4 duration-300 cursor-pointer hover:bg-sky-900
                          #{current_page?(mypage_path) ? 'bg-sky-950 border border-sky-700 text-white' : 'text-gray-400 hover:text-gray-200'}" do %>
    <i class="bi bi-person-fill"></i>
    <span class="text-[15px] ml-4 font-bold">マイページ</span>
  <% end %>

  <!-- Add more menu items here -->

  <%= link_to your_decks_path, class: "p-2.5 mt-3 flex items-center rounded-md px-4 duration-300 cursor-pointer hover:bg-sky-900
                                #{current_page?(your_decks_path) ? 'bg-sky-950 border border-sky-700 text-white' : 'text-gray-400 hover:text-gray-200'}" do %>
    <i class="bi bi-person-fill"></i>
    <span class="text-[15px] ml-4 font-bold">デッキ 作成･編集</span>
  <% end %>

  <%= link_to your_cards_path, class: "p-2.5 mt-3 flex items-center rounded-md px-4 duration-300 cursor-pointer hover:bg-sky-900
                                  #{current_page?(your_cards_path) ? 'bg-sky-950 border border-sky-700 text-white' : 'text-gray-400 hover:text-gray-200'}" do %>
    <i class="bi bi-person-fill"></i>
    <span class="text-[15px] ml-4 font-bold">カード  作成･編集</span>
  <% end %>

<% else %>
  <%= link_to decks_path, class: "p-2.5 mt-3 flex items-center rounded-md px-4 duration-300 cursor-pointer hover:bg-sky-900
                                #{current_page?(decks_path) ? 'bg-sky-950 border border-sky-700 text-white' : 'text-gray-400 hover:text-gray-200{}'}" do %>
    <i class="bi bi-house-door-fill"></i>
    <span class="text-[15p4x] ml-4 font-bold">みんなの公開デッキ</span>
  <% end %>
<% end %>
