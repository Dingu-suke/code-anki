<%
=begin
<h1>New deck</h1>
<br/>

<div class="text-white">
  <%= form_with model: @deck, local: true do |f| %>
    <!-- 既存のフィールド -->
    <div>
      <%= f.label :name, "タイトル", class:"form-label" %>
      <%= f.text_field :name, class: "form-control text-cyan-800" %>
    </div>
    <br/>
    <p>[既存のカードを選択]</p>
      <% if current_user.cards.present? %>
        <%= f.collection_check_boxes :card_ids, current_user.cards, :id, :title do |b| %>
          <%= b.label { b.check_box + b.text } %>
        <% end %>
      <% else %>
        <p>まだカードがありません。カードを作成してください。</p>
      <% end %>

    <br/>
    <br/>
    <div>
      <%= f.label :tag_names, "タグ (コンマで区切る)", class:"form-label" %>
      <%= f.text_field :tag_names, class: "form-control text-cyan-800" %>
    </div>
    <br/>
    <%= f.submit "デッキを作成する", class:"btn btn-outline btn-info" %>
  <% end %>
</div>

<%
=end
%>

<div id="deckForm"></div>
