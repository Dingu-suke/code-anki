{
  "name": "app",
  "private": true,
  "dependencies": {
    "@blocknote/core": "^0.14.5",
    "@blocknote/mantine": "^0.14.6",
    "@blocknote/react": "^0.14.6",
    "@blocknote/shadcn": "^0.14.6",
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.4",
    "@monaco-editor/react": "^4.6.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "axios": "^1.7.2",
    "daisyui": "^4.8.0",
    "esbuild": "^0.20.2",
    "esbuild-plugin-copy": "^2.1.1",
    "highlight.js": "^11.9.0",
    "lodash": "^4.17.21",
    "postcss": "^8.4.38",
    "prismjs": "^1.29.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-monaco-editor": "^0.55.0",
    "tailwindcss": "^3.4.1"
  },
  "scripts": {
    "build:dev": "node esbuild.config.js --dev",
    "build:prod": "node esbuild.config.js --prod",
    "build:css-dev": "tailwindcss -o ./app/assets/builds/application.css --watch",
    "build:css-prod": "tailwindcss -o ./app/assets/builds/application.css --minify",
    "build": "if [ \"$NODE_ENV\" = \"production\" ]; then yarn run build:prod; else yarn run build:dev; fi",
    "build:css": "if [ \"$CSS_ENV\" = \"production\" ]; then yarn run build:css-prod; else yarn run build:css-dev; fi",
    "heroku-postbuild": "yarn run build:prod && yarn run build:css-prod"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "ts-jest": "^29.1.4",
    "typescript": "^5.4.5"
  }
}
