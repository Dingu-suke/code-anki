{
  "name": "app",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.4",
    "@monaco-editor/react": "^4.6.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "axios": "^1.7.2",
    "daisyui": "^4.8.0",
    "easymde": "^2.18.0",
    "esbuild": "^0.20.2",
    "framer-motion": "^11.2.14",
    "postcss": "^8.4.38",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook": "^0.0.1",
    "react-hook-form": "^7.52.1",
    "react-markdown": "^9.0.1",
    "react-monaco-editor": "^0.55.0",
    "react-simplemde-editor": "^5.2.0",
    "styled-components": "^6.1.11",
    "tailwindcss": "^3.4.1"
  },
  "scripts": {
    "build:dev": "esbuild app/javascript/application.js --bundle --outdir=app/assets/builds --watch",
    "build:prod": "esbuild app/javascript/application.js --bundle --outdir=app/assets/builds --minify",
    "build:css-dev": "tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.tailwind.css --watch",
    "build:css-prod": "tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.tailwind.css --minify",
    "build": "if [ \"$NODE_ENV\" = \"production\" ]; then yarn run build:prod; else yarn run build:dev; fi",
    "build:css": "if [ \"$CSS_ENV\" = \"production\" ]; then yarn run build:css-prod; else yarn run build:css-dev; fi",
    "heroku-postbuild": "yarn install && yarn run build:prod && yarn run build:css-prod"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "ts-jest": "^29.1.4",
    "typescript": "^5.4.5"
  }
}
